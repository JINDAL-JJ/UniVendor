<link rel="stylesheet" href="/css/user_sign_in.css">


<script
    type="text/javascript">window.setTimeout("document.getElementById('flash-messages').style.display='none';", 1000); </script>

<style>
    .alert-danger{
        width: 50%;
         text-align: center;
    }

    .alert-success{
        width: 50%;
         text-align: center;
    }
</style>
<form class="container" action="/users/createSession" method="POST">

    <% if (message !="" ) { %>
        <div id="flash-messages">
            <% if (message == "Signup Success" ) { %>
                <div class="alert alert-success">
                   You have successfully created your account. Please login now!
                </div>
                <% } else { %>
                    <div class="alert alert-danger">
                      Signin Unsuccessful, Please try again!
                    </div>
                    <% } %>
        </div>
        <% } %>



    <h1>Log In</h1>
    <div class="box">
        <i class="fa fa-envelope"></i>
        <input type="email" name="email" id="email" placeholder="Enter your Email">
    </div>
    <div class="box">
        <i class="fa fa-key"></i>
        <input type="password" name="password" id="password" placeholder="Enter your Password">
    </div>
    <input class="btn btn-light-blue btn-primary prop mb-2" type="submit" value="Submit">
    <div>
        <a href="./signup.html" style="text-decoration: none;"> new around here? Sign up</a>
    </div>
</form>

